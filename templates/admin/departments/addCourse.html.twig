{% extends 'admin/layouts/base.html.twig' %}

{% block page_title %}
    {{ pageTitle }}
{% endblock %}

{% block body %}

    <div class="col-lg-12 col-12  layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>{{ pageTitle }}</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <form action="{{ path('app_admin_departments_doaddcourse', { departmentId: department.id }) }}" method="post">

                    <div class="form-group mb-4">
                        <label for="select-course">Select Course to Add</label>
                        <select class="form-control" name="select_course" id="select-course" required>
                            <option disabled>-- Select Course --</option>
                            <optgroup label="List of Available Course">
                                {% for course in courses %}
                                    <option value="{{ course.id }}">{{ course.title }}</option>
                                {% endfor %}
                            </optgroup>
                        </select>
                    </div>
                    <button type="submit" name="time" class="btn btn-primary">Save</button>
                </form>

            </div>
        </div>
    </div>

{% endblock %}