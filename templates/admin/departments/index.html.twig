{% extends 'admin/layouts/base.html.twig' %}

{% block page_title %}
    {{ pageTitle }}
{% endblock %}

{% block body %}

    <div>
        <a href="{{ path('app_admin_departments_new') }}" class="btn btn-primary mb-2">Add Department</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered mb-2">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Courses</th>
                    <th>Action(s)</th>
                </tr>
            </thead>
            <tbody>
                {% for department in departments %}
                    <tr>
                        <td>{{ department.code }}</td>
                        <td>{{ department.name }}</td>
                        <td>{{ department.departmentCourses.count }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_admin_departments_edit', { id: department.id }) }}"
                                class="btn btn-primary">
                                Edit
                            </a>
                            <a href="{{ path('app_admin_departments_delete', { id: department.id }) }}"
                                class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <div align="center">
                        {{ 'No departments found...' }}
                    </div>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}