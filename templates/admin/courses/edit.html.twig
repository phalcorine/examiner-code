{% extends 'admin/layouts/base.html.twig' %}

{% block page_title %}
    {{ pageTitle }}
{% endblock %}

{% block body %}

    <div class="col-lg-12 col-12  layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>{{ pageTitle }}</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <form action="{{ path('app_admin_courses_update', { id: course.id }) }}" method="post">
                    <div class="form-group mb-4">
                        <label for="course-code">Course Code</label>
                        <input type="text" class="form-control" name="course_code" id="course-code"
                               placeholder="Course Code (e.g C055)" value="{{ course.code }}">
                    </div>
                    <div class="form-group mb-4">
                        <label for="department-name">Name of Course</label>
                        <input type="text" class="form-control" name="course_title" id="course-title"
                               placeholder="Course Name (e.g Basic English)" value="{{ course.title }}">
                    </div>
                    <div class="form-group mb-4">
                        <label for="course-description">Description</label>
                        <input type="text" class="form-control" name="course_description" id="course-description"
                               placeholder="Some description about the course" value="{{ course.description }}">
                    </div>
                    <button type="submit" name="time" class="btn btn-primary">Save</button>
                </form>

            </div>
        </div>
    </div>

{% endblock %}