{% extends 'admin/layouts/base.html.twig' %}

{% block page_title %}
    {{ pageTitle }}
{% endblock %}

{% block body %}

    <div class="col-lg-12 col-12  layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>{{ pageTitle }}</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <form action="{{ url('app_admin_courses_create') }}" method="post">
                    <div class="form-group mb-4">
                        <label for="course-code">Course Code</label>
                        <input type="text" class="form-control" name="course_code" id="course-code" placeholder="Course Code (e.g C055)">
                    </div>
                    <div class="form-group mb-4">
                        <label for="course-title">Name of Course</label>
                        <input type="text" class="form-control" name="course_title" id="course-title" placeholder="Course Title (e.g Introduction to Programming)">
                    </div>
                    <div class="form-group mb-4">
                        <label for="course-description">Description</label>
                        <input type="text" class="form-control" name="course_description" id="course-description" placeholder="Some description about the course">
                    </div>
                    <input type="submit" name="time" class="btn btn-primary">
                </form>

            </div>
        </div>
    </div>

{% endblock %}