{% extends 'admin/layouts/base.html.twig' %}

{% block page_title %}
    {{ pageTitle }}
{% endblock %}

{% block body %}

    <div class="col-lg-12 col-12  layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>{{ pageTitle }}</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <dl class="row">
                    <dt class="col-md-4">Course Code: </dt>
                    <dd class="col-md-8">
                        {{ course.code }}
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-md-4">Course Title: </dt>
                    <dd class="col-md-8">
                        {{ course.title }}
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-md-4">Course Description: </dt>
                    <dd class="col-md-8">
                        <p>
                            {{ course.description }}
                        </p>
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-md-4">Number of Departments taking this course: </dt>
                    <dd class="col-md-8">
                        {{ course.departmentCourses.count }}
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-12 layout-spacing">

    </div>

{% endblock %}



